{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Redoubt",
  "version": "0.1.0",
  "identifier": "com.redoubt.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Redoubt",
        "width": 1280,
        "height": 720,
        "minWidth": 940,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "infoPlist": "./Info.plist"
    }
  }
}
